<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %><%@ page contentType="text/html;charset=UTF-8" language="java" %><%@taglib prefix="sdf" uri="http://java.sun.com/jsp/jstl/fmt" %><%@taglib prefix="shiro" uri="http://shiro.apache.org/tags" %><html><head>    <title>智能巡检系统</title>    <%@ include file="/WEB-INF/pages/common/header.jsp"%></head><body><%--<%@ include file="/WEB-INF/pages/common/navigation.jsp"%>--%><!-- topbar ends --><div class="ch-container">    <div class="row">        <%--<%@ include file="/WEB-INF/pages/common/menu.jsp"%>--%>        <div id="content" class="col-lg-12 col-sm-12">            <div class="row">                <div class="box col-md-12">                    <div class="box-inner">                        <div class="box-header well" data-original-title="">                            <h2>                                <i class="glyphicon glyphicon-globe"></i>系统设置                            </h2>                        </div>                        <ul id="myTab" class="nav nav-tabs">                            <li class="active" >                                <shiro:hasPermission name="item:system">                                    <a href="showsystem?type=1">终端显示和报告缓存设置</a>                                </shiro:hasPermission></li>                            <li>                                <a href="showsystem?type=2">一般性设置</a>                            </li>                            <li><a href="showsystem?type=4">图片|视频|音频服务器设置</a></li>                            <li><a href="showsystem?type=3">报告波动值设置</a></li>                            <li><shiro:hasPermission name="item:data"><a href="showdaterecord?page=1">可读数据管理</a></shiro:hasPermission></li>                            <li><shiro:hasPermission name="item:apk"><a href="showappversion?page=1">Android APK更新</a></shiro:hasPermission></li>                            <li><shiro:hasPermission name="item:warntype"><a href="showwarntype?page=1">隐患类型和终止原因设置</a></shiro:hasPermission></li>                            <li><a href="showReportSetting">显示单次任务报告设置</a></li>                            <li><a href="showDoubleReportSetting">显示任务报告汇总设置</a></li>                        </ul>                        <div id="myTabContent" class="tab-content">                            <div class="tab-pane fade in active" id="home">                                <div style="margin-bottom: 20px;margin-left: 25px;">                                    <h3>终端显示和报告缓存设置</h3><hr>                                    <form action="updsystem" method="post" id="form">                                        <input type="hidden" name="type" value="${type}">                                        <table class="table table-striped table-bordered table-hover bootstrap-datatable datatable responsive dataTable">                                            <tr>                                                <td class="form-inline">                                                    <label class="control-label" for="rol">版权信息:</label>                                                    <input type="text" name="COPYRIGHT_CONTENT" value="${COPYRIGHT_CONTENT}" id="rol" class="form-control"></td>                                                <td class="form-inline">                                                    <label class="control-label" for="app">显示:</label>                                                    <select name="SHOW_COPYRIGHT" id="app" class="form-control">                                                        <option ${SHOW_COPYRIGHT eq '1' ? 'selected':''} value="1">是</option>                                                        <option ${SHOW_COPYRIGHT eq '0' ? 'selected':''} value="0">否</option>                                                    </select></td>                                            </tr>                                            <tr>                                                <td class="form-inline">                                                    <label class="control-label" for="name">记住用户名:</label>                                                    <select name="REMEMBER_NAME" id="name" class="form-control">                                                        <option ${REMEMBER_NAME eq '1' ? 'selected':''} value="1">是</option>                                                        <option ${REMEMBER_NAME eq '0' ? 'selected':''} value="0">否</option>                                                    </select></td>                                                <td class="form-inline">                                                    <label class="control-label" for="pwd">记住密码:</label>                                                    <select name="REMEMBER_PSW" id="pwd" class="form-control">                                                        <option ${REMEMBER_PSW eq '1' ? 'selected':''} value="1">是</option>                                                        <option ${REMEMBER_PSW eq '0' ? 'selected':''} value="0">否</option>                                                    </select></td>                                            </tr>                                            <tr>                                                <td class="form-inline">                                                    <label class="control-label" for="caches">任务报告缓存天数:</label>                                                    <input type="text" name="REPORTCACHE" value="${REPORTCACHE}" id="caches" class="form-control" placeholder="请输入整数或小数" onkeyup="if(isNaN(value))execCommand('undo')" onafterpaste="if(isNaN(value))execCommand('undo')"></td>                                                <td colspan="2" class="form-inline">                                                    <label class="control-label" for="ff">只在有WIFI的情况下上传数据:</label>                                                    <select name="WIFIUPLOAD" id="ff" class="form-control">                                                        <option ${WIFIUPLOAD eq '1' ? 'selected':''} value="1">是</option>                                                        <option ${WIFIUPLOAD eq '0' ? 'selected':''} value="0">否</option>                                                    </select></td>                                            </tr>                                            <tr>                                                <td class="form-inline">                                                    <label class="control-label" for="SYSTEMVERSION">系统当前版本:</label>                                                    <input type="text" name="SYSTEMVERSION" value="${SYSTEMVERSION}" id="SYSTEMVERSION" class="form-control" placeholder="请输入整数或小数" onkeyup="if(isNaN(value))execCommand('undo')" onafterpaste="if(isNaN(value))execCommand('undo')"></td>                                                <td colspan="2" class="form-inline">                                                    <label class="control-label" for="APPVERSION">APP版本:</label>                                                    <input type="text" name="APPVERSION" value="${APPVERSION}" id="APPVERSION" class="form-control" placeholder="请输入整数或小数" onkeyup="if(isNaN(value))execCommand('undo')" onafterpaste="if(isNaN(value))execCommand('undo')"></td>                                            </tr>                                        </table>                                    </form>                                </div>                            </div>                        </div>                        <input type="button" class="btn btn-primary" value="保存" onclick="updsystem()" style="margin-left: 25px;margin-bottom: 20px;">                        <input type="button" class="btn btn-primary" value="取消" style="margin-left: 100px;margin-bottom: 20px;">                    </div>                </div>            </div>        </div>    </div></div></div><script type="text/javascript">    function updsystem(){        $.ajax({            url:"updsystem",            type:"post",            data:$('#form').serialize(),            async: false,            success: function(data) {                if(data>0){                    alert("修改成功");                    showtask();                }else{                    alert("修改失败");                    return false;                }            }        })    }    function showtask(){        window.location="showsystem?type=1";    }</script></body></html>